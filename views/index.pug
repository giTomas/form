  body

    .c-signupLogin___ctrls
      #js-signup-open.c-signup__open Registrovať
      #js-login-open.c-login__open Prihlásiť
    #js-signup-container.c-signup__container(style="display: none")
      form#js-singup.c-signup__form(data-url="url", data-username="user")
        #js-signup-close.c-signup__close
          svg(fill="#FFFFFF", height="46", viewBox="0 0 24 24", width="46", xmlns="http://www.w3.org/2000/svg")
            path(d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z")
            path(d="M0 0h24v24H0z", fill="none")
        .c-signup__field
          input(type="text" name="username" required)
          label(for="user") Uživateľské meno:
        .c-signup__messages
          #js-username-used.c-signup__message
            svg(fill="#8b0000", height="20", viewBox="0 0 24 24", width="18", xmlns="http://www.w3.org/2000/svg")
              path(d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z")
              path(d="M0 0h24v24H0z", fill="none")
            p Uživatelské meno je už zaregisrované
          //- #js-username-free.c-signup__message
            //- p Uživatelské meno je ok
        .c-signup__field
          input(type="password" name="password" required)
          label(for="password") Heslo:
        .c-signup__field
          input(type="password" name="passwordrepeat" required)
          label(for="passwordrepeat") Zopakovať heslo:
        .c-signup__messages
          #js-password-invalid.c-signup__message
            svg(fill="#8b0000", height="20", viewBox="0 0 24 24", width="18", xmlns="http://www.w3.org/2000/svg")
              path(d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z")
              path(d="M0 0h24v24H0z", fill="none")
            p Zadané heslá sa nezhodujú
        input(type="submit" value="Registrovať")

    #js-login-container.c-login__container(style="display: none")
      form#js-login.c-login__form(data-url="url", data-username="user")
        #js-login-close.c-login__close
          svg(fill="#FFFFFF", height="46", viewBox="0 0 24 24", width="46", xmlns="http://www.w3.org/2000/svg")
            path(d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z")
            path(d="M0 0h24v24H0z", fill="none")
        .c-signup__field
          input(type="text" name="username" required)
          label(for="user") Uživateľské meno:
        .c-signup__field
          input(type="password" name="password" required)
          label(for="password") Heslo:
        .c-signup__messages
          #js-input-invalid.c-signup__message
            svg(fill="#8b0000", height="20", viewBox="0 0 24 24", width="18", xmlns="http://www.w3.org/2000/svg")
              path(d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z")
              path(d="M0 0h24v24H0z", fill="none")
            p Uživateľské meno, alebo heslo boli zadané nesprávne.
        input(type="submit" value="Prihlásiť")

    script(src="js/TweenMax.min.js")
    script(src="js/app.js")
